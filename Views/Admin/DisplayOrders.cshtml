@model IEnumerable<online_shopping.DAL.DisplayOrder>

@{
    ViewBag.Title = "DisplayOrders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
.scrollit {
    /*min-height: 67.5%;
			width: 50.5%;
			position: absolute;
			top: 22%;*/
			overflow: scroll;
}
    </style>
<h2>DisplayOrders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="scrollit">
    <table class="table">
        <tr>
            <th>
                UserName
            </th>
            <th>
                Products
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Phone No.
            </th>
            <th>
                shipping address
            </th>
            <th>
                Order DateTime
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_phone_no)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.order_add)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date_time)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
    </div>
